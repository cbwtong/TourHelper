<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/map_container"
    android:background="#ffffff"
     >
	
    
     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
	    <LinearLayout
	            android:id="@+id/menu_control"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <Button
	                android:id="@+id/mysearch_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="查询位置" />
	
	            <Button
	                android:id="@+id/mydirection_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="路线查询"
	                />
	            <ToggleButton
	                android:id="@+id/locationbtn"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:textColor="#000000"
	                android:textOff="打开定位"
	                android:textOn="关闭定位"
	                
	                />

        </LinearLayout>
    	
    	<LinearLayout
            android:id="@+id/direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="起点" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="终点" />

           </LinearLayout>
           <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                 >

                <AutoCompleteTextView
                    android:id="@+id/input_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />

                <AutoCompleteTextView
                    android:id="@+id/input_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/start_direction_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询" 
                    android:onClick="OnDirection" />
            </LinearLayout>
       </LinearLayout>
       <!-- linear menu is over -->
       
       <LinearLayout
            android:id="@+id/search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#E6E6FA" >

            <AutoCompleteTextView
                android:id="@+id/input_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="#000000" >

                <requestFocus />
            </AutoCompleteTextView>

            <Button
                android:id="@+id/place_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:onClick="Onlocation"
                android:text="查询位置" />
        </LinearLayout>
        
       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >

           
			<com.baidu.mapapi.map.MapView android:id="@+id/bmapsView"  
                    android:layout_width="fill_parent"  
                    android:layout_height="fill_parent"  
                    android:clickable="true" />  
            <ListView
                android:id="@+id/markOption"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:dividerHeight="1px"
                android:background="#000000"
                android:entries="@array/options" 
                         />
			<LinearLayout
			android:id="@+id/route"
	        android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginRight="10dp"
    	    android:layout_marginTop="10dip"
    	    android:orientation="vertical"
	        android:layout_alignWithParentIfMissing="false">

				<Button
				    android:id="@+id/drive"
				    android:layout_width="200px"
				    android:layout_height="wrap_content"
				    android:layout_weight="1.0"
				    android:background="@drawable/button_style"
				    android:text="驾车搜索"
				    android:textColor="#000000" />
    		
    		<Button
    		    android:id="@+id/bus"
    		    android:layout_width="200px"
    		    android:layout_height="wrap_content"
    		    android:textColor="#000000"
    		    android:layout_weight="1.0"
    		    android:layout_marginTop="10dip"
    		    android:background="@drawable/button_style"
    		    android:text="公交搜索" />
    		<Button
    		    android:id="@+id/walk"
    		    android:layout_width="200px"
    		    android:layout_height="wrap_content"
    		    android:textColor="#000000"
    		    android:layout_weight="1.0"
    		    android:layout_marginTop="10dip"
    		    android:background="@drawable/button_style"
    		    android:text="步行搜索" />
    		
    		</LinearLayout>
             <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="10dip"
	        android:layout_alignWithParentIfMissing="false"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="false" >
		
			 <Button
			     android:id="@+id/pre"
			     android:layout_width="fill_parent"
			     android:layout_height="fill_parent"
			     android:layout_weight="1.0"
			     android:background="@drawable/pre_"
			     android:layout_marginLeft="2dip"
			     android:layout_marginRight="2dip" />
			 <Button
			     android:id="@+id/next"
			     android:layout_width="fill_parent"
			     android:layout_height="fill_parent"
			     android:layout_weight="1.0"
			     android:background="@drawable/next_"
			     android:layout_marginLeft="2dip"
			     android:layout_marginRight="2dip" />
	
	    </LinearLayout>
           

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
